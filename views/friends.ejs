<!DOCTYPE html>
<html>
<head>
    <title>Friends</title>
    <!-- Bootstrap CSS (included inline) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Friends</h1>
        <a href="/friends/requests" class="btn btn-secondary mb-3">View Friend Requests</a>
        <a href="/friends/search" class="btn btn-primary mb-3">Search for Friends</a>
        
        <!-- Friend List -->
        <div class="row">
            <% friends.forEach(friend => { %>
                <div class="col-md-4">
                    <div class="card">
                        <img src="<%= friend.profilePicture %>" class="card-img-top" alt="<%= friend.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= friend.name %></h5>
                            <p class="card-text">Last Seen: <%= friend.lastSeen %></p>
                            <form method="POST" action="/friends/unfriend/<%= friend.id %>">
                                <button type="submit" class="btn btn-danger">Unfriend</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS (included inline) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
