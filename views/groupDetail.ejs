<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= group.name %> - Group Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center"><%= group.name %></h1>
        <p class="text-muted text-center"><%= group.description %></p>
        <p class="text-center">
            <strong>Admin:</strong>
            <% if (group.admin) { %>
                <%= group.admin.name %> (<%= group.admin.email %>)
            <% } else { %>
                Unknown
            <% } %>
        </p>

        <!-- Join Requests -->
        <% if (isAdmin) { %>
            <h3>Join Requests</h3>
            <% if (group.joinRequests.length > 0) { %>
                <% group.joinRequests.forEach(request => { %>
                    <p>
                        <%= request.name %> (<%= request.email %>)
                        <a href="/groups/<%= group._id %>/approve/<%= request._id %>" class="btn btn-success btn-sm">Approve</a>
                        <a href="/groups/<%= group._id %>/reject/<%= request._id %>" class="btn btn-danger btn-sm">Reject</a>
                    </p>
                <% }); %>
            <% } else { %>
                <p>No pending requests</p>
            <% } %>
        <% } %>
    </div>
</body>
</html>
