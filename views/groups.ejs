<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Group Discovery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Campus Social Media</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/groups">Groups</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<div class="container mt-4">
        <h1 class="mb-3">Group Discovery</h1>
        
        <!-- Create Group Button -->
        <div class="d-flex justify-content-end mb-4">
            <a href="/groups/create" class="btn btn-primary">Create Group</a>
        </div>

        <!-- Search Bar -->
        <div class="mb-4">
            <form method="GET" action="/groups/search">
                <input type="text" name="query" placeholder="Search for groups..." class="form-control" />
            </form>
        </div>

        <!-- Group Listings -->
        <div class="row">
            <% groups.forEach(group => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= group.image || '/images/default-group.png' %>" class="card-img-top" alt="<%= group.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= group.name %></h5>
                            <p class="card-text"><%= group.description %></p>
                            <p class="text-muted">Members: <%= group.members %></p>
                            <a href="/groups/<%= group.id %>" class="btn btn-primary">View Group</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
  <!-- Group Discovery Section -->
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <h1 class="text-center mb-4">Discover Groups</h1>
        <form class="d-flex mb-4">
          <input class="form-control me-2" type="search" placeholder="Search groups by name, topic, or keyword" aria-label="Search">
          <button class="btn btn-primary" type="submit">Search</button>
        </form>
      </div>
    </div>

    <!-- Explore/Browse Section -->
    <h2>Explore Groups</h2>
    <div class="row">
      <!-- Group Card Example -->
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="https://via.placeholder.com/300x150" class="card-img-top" alt="Group Image">
          <div class="card-body">
            <h5 class="card-title">Group Name</h5>
            <p class="card-text">Brief description of the group's purpose and topics.</p>
            <p class="text-muted mb-1"><strong>Members:</strong> 500</p>
            <p class="text-muted"><strong>Activity:</strong> High</p>
            <a href="/groups/1" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
      <!-- Repeat similar cards for more groups -->
    </div>

    <!-- Recommended Groups Section -->
    <h2>Recommended for You</h2>
    <div class="row">
      <!-- Recommended Group Card Example -->
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="https://via.placeholder.com/300x150" class="card-img-top" alt="Group Image">
          <div class="card-body">
            <h5 class="card-title">Recommended Group</h5>
            <p class="card-text">Based on your interests and connections.</p>
            <p class="text-muted mb-1"><strong>Members:</strong> 200</p>
            <p class="text-muted"><strong>Activity:</strong> Moderate</p>
            <a href="/groups/2" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
      <!-- Repeat similar cards for more recommendations -->
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-5">
    <p>&copy; 2025 Campus Social Media. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
