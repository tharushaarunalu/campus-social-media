<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Social Media</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/public/js/scripts.js" defer></script>
</head>
<body>

    <header>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Campus Social</a>
                <div class="collapse navbar-collapse">
                    <div class="navbar-nav ms-auto">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/groups">Groups</a>
                        <a class="nav-link" href="/messages">Messages</a>
                        <a class="nav-link" href="/notifications">Notifications</a>
                        <!-- Check if user is logged in -->
                        <a class="nav-link" href="/profile"><img src="/public/uploads/default.png" alt="Profile" class="profile-pic rounded-circle" width="30"> John Doe</a>
                        <a class="nav-link" href="/logout">Logout</a>
                        <!-- If not logged in, show login/register links -->
                        <a class="nav-link" href="/login">Login</a>
                        <a class="nav-link" href="/register">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container mt-4">
        <!-- Post Creation Section -->
        <section class="create-post mb-4">
            <form action="/posts/create" method="POST" enctype="multipart/form-data" class="form-group">
                <textarea name="content" placeholder="What's on your mind?" required class="form-control mb-2"></textarea>
                <input type="file" name="postImage" accept="image/*" class="form-control mb-2">
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
            <!-- If not logged in, prompt to login -->
            <p>Please <a href="/login">login</a> to create a post.</p>
        </section>

        <!-- Display Posts -->
        <section class="posts mb-4">
            <h2>Recent Posts</h2>
            <!-- Example of a post -->
            <div class="post mb-3 p-3 border rounded">
                <div class="post-header d-flex align-items-center mb-2">
                    <img src="/public/uploads/default.png" alt="Author Profile" class="author-pic rounded-circle" width="40">
                    <p class="author-name ms-2 mb-0">John Doe</p>
                </div>
                <div class="post-content mb-2">
                    <p>This is an example of a post content.</p>
                    <img src="/public/uploads/post-image.jpg" alt="Post Image" class="post-image img-fluid">
                </div>
                <div class="post-actions">
                    <button class="btn btn-outline-primary btn-sm me-2">Like</button>
                    <button class="btn btn-outline-secondary btn-sm">Comment</button>
                </div>
            </div>
        </section>

        <!-- Trending Groups -->
        <section class="trending-groups mb-4">
            <h2>Trending Groups</h2>
            <div class="group-list">
                <!-- Example group -->
                <div class="group-item mb-3 p-3 border rounded">
                    <h3><a href="/groups/12345" class="text-decoration-none">Tech Enthusiasts</a></h3>
                    <p>Group for those who love technology and innovation.</p>
                </div>
            </div>
        </section>

        <!-- Notifications -->
        <section class="notifications mb-4">
            <h2>Notifications</h2>
            <ul class="notification-list list-unstyled">
                <!-- Example notification -->
                <li class="notification-item mb-2 p-2 border rounded">
                    <p>You have a new message from Jane Doe.</p>
                </li>
            </ul>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3">
        <p>&copy; 2025 Campus Social Media</p>
    </footer>

    <!-- Bootstrap JS (Optional, for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
