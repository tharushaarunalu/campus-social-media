<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Messages</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
      height: 100vh;
      margin: 0;
    }
    .conversation-list {
      width: 25%;
      border-right: 1px solid #ddd;
      overflow-y: auto;
    }
    .conversation-item {
      padding: 10px;
      cursor: pointer;
      border-bottom: 1px solid #f1f1f1;
    }
    .conversation-item:hover {
      background-color: #f9f9f9;
    }
    .conversation-item.active {
      background-color: #e7f1ff;
      font-weight: bold;
    }
    .message-area {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }
    .messages {
      flex-grow: 1;
      overflow-y: auto;
      padding: 15px;
    }
    .message {
      margin-bottom: 10px;
      max-width: 70%;
      padding: 10px;
      border-radius: 8px;
    }
    .message.sender {
      background-color: #e0ffe0;
      align-self: flex-end;
    }
    .message.receiver {
      background-color: #f1f1f1;
      align-self: flex-start;
    }
    .message-timestamp {
      font-size: 0.8rem;
      text-align: right;
      color: gray;
    }
    .message-input-area {
      padding: 10px;
      border-top: 1px solid #ddd;
      display: flex;
      align-items: center;
    }
    .message-input-area input {
      flex-grow: 1;
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <!-- Conversation List Sidebar -->
  <div class="conversation-list">
    <div class="conversation-item active">
      <div>
        <img src="https://via.placeholder.com/40" alt="Profile" class="rounded-circle me-2">
        <strong>John Doe</strong>
      </div>
      <div class="small text-muted">Last message: Hey! Are you free?</div>
      <div class="small text-end">2 mins ago</div>
    </div>
    <div class="conversation-item">
      <div>
        <img src="https://via.placeholder.com/40" alt="Profile" class="rounded-circle me-2">
        <strong>Group Chat</strong>
      </div>
      <div class="small text-muted">Last message: Meeting at 3 PM</div>
      <div class="small text-end">10 mins ago</div>
    </div>
    <!-- Additional conversations -->
  </div>

  <!-- Message Area -->
  <div class="message-area">
    <!-- Message Display -->
    <div class="messages">
      <div class="message sender">
        Hello! How are you?
        <div class="message-timestamp">10:30 AM</div>
      </div>
      <div class="message receiver">
        I'm good! How about you?
        <div class="message-timestamp">10:32 AM</div>
      </div>
      <!-- Additional messages -->
    </div>
    
    <!-- Message Input -->
    <div class="message-input-area">
      <input type="text" class="form-control" placeholder="Type a message...">
      <button class="btn btn-primary">Send</button>
    </div>
  </div>
</body>
</html>
