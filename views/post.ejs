<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Posts</h1>

        <!-- Create Post Button -->
        <div class="d-flex justify-content-end mb-4">
            <a href="/posts/create" class="btn btn-primary">Create New Post</a>
        </div>

        <!-- Posts List -->
        <% if (posts && posts.length > 0) { %>
            <div class="row">
                <% posts.forEach(post => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title"><%= post.title %></h5>
                                <p class="card-text"><%= post.content %></p>
                                <p class="text-muted"><small>Posted by: <%= post.author ? post.author.name : 'Unknown' %></small></p>
                                <p class="text-muted"><small>Posted on: <%= new Date(post.createdAt).toLocaleDateString() %></small></p>
                                <a href="/posts/<%= post._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-warning text-center" role="alert">
                No posts available. Be the first to create a post!
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
