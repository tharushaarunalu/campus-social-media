<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Campus Social Media</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Profile Header -->
  <div class="container mt-4">
    <div class="card shadow-lg">
      <div class="card-body text-center" style="padding: 2rem; position: relative; background: linear-gradient(45deg, #007bff, #6610f2); color: white;">
        <div class="position-relative d-inline-block mb-3">
          <!-- Placeholder for Profile Picture -->
          <img src="https://via.placeholder.com/150" alt="Profile Picture" class="rounded-circle shadow" style="width: 150px; height: 150px; border: 5px solid white;">
        </div>
        <!-- Placeholder for User Information -->
        <h2 class="fw-bold">[Username]</h2>
        <h5 class="text-light">[Full Name]</h5>
        <p class="text-light">Short bio about the user. Add a quick description here.</p>
        <div class="d-flex justify-content-center gap-3 mt-3">
          <div class="d-flex justify-content-center gap-3 mt-3">
  <button class="btn btn-outline-light btn-sm" onclick="followUser()">Follow</button>
  <button class="btn btn-outline-light btn-sm" onclick="sendMessage()">Message</button>
  <button class="btn btn-outline-light btn-sm" onclick="editProfile()">Edit Profile</button>
</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs -->
  <div class="container mt-4">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#posts">Posts</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#about">About</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#photos">Photos/Videos</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#friends">Friends/Followers</a>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content mt-4">
      <!-- Posts Section -->
      <div id="posts" class="tab-pane fade show active">
        <h4>Your Posts</h4>
        <p>Posts content goes here. Dynamically load posts.</p>
      </div>

      <!-- About Section -->
      <div id="about" class="tab-pane fade">
        <h4>About</h4>
        <p>Details about the user, such as education, work, and interests.</p>
      </div>

      <!-- Photos Section -->
      <div id="photos" class="tab-pane fade">
        <h4>Photos & Videos</h4>
        <p>Gallery or uploaded media content goes here.</p>
      </div>

      <!-- Friends Section -->
      <div id="friends" class="tab-pane fade">
        <h4>Friends/Followers</h4>
        <p>List of friends or followers dynamically loaded here.</p>
      </div>
    </div>
  </div>

  <footer class="bg-dark text-white text-center py-3 mt-5">
    <p>&copy; 2025 Campus Social Media. All rights reserved.</p>
  </footer>

  <script>
  // JavaScript to handle button actions
  function editProfile() {
    // Redirect to the edit profile page
    window.location.href = "/editProfile";
  }

  function followUser() {
    // Example action for following a user
    alert("You are now following this user!");
    // You can add an AJAX request here to update the server
  }

  function sendMessage() {
    // Redirect to the messaging page or show a modal
    window.location.href = "/message";
  }
</script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
